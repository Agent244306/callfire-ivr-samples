<dialplan name="Root">
	<if name="Monday" expr="${global.date.dayOfWeek} == 2 &amp;&amp; ${global.time.hour.military} &gt; 7 &amp;&amp; ${global.time.hour.military} &lt; 16">
		<transfer name="Homer">8014138025</transfer>
	</if>
	<if name="Tuesday" expr="${global.date.dayOfWeek} == 3 &amp;&amp; ${global.time.hour.military} &gt; 7 &amp;&amp; ${global.time.hour.military} &lt; 16">
		<transfer name="Marge">8016021327</transfer>
	</if>
	<if name="Wednesday" expr="${global.date.dayOfWeek} == 4 &amp;&amp; ${global.time.hour.military} &gt; 7 &amp;&amp; ${global.time.hour.military} &lt; 16">
		<transfer name="Bart">8014198126</transfer>
	</if>
	<if name="Thursday" expr="${global.date.dayOfWeek} == 5 &amp;&amp; ${global.time.hour.military} &gt; 7 &amp;&amp; ${global.time.hour.military} &lt; 16">
		<transfer name="Lisa">8014778547</transfer>
	</if>
	<if name="Friday" expr="${global.date.dayOfWeek} == 6 &amp;&amp; ${global.time.hour.military} &gt; 7 &amp;&amp; ${global.time.hour.military} &lt; 16">
		<transfer name="Maggie">8018429577</transfer>
	</if>
	<if name="Weekend" expr="${global.date.dayOfWeek} == 1 || ${global.date.dayOfWeek} == 7">
		<play type="tts" voice="female2" name="WeekendMessage">The Simpsons are only available Monday through Friday. Please call back during business hours, or stay on the line to leave a message.</play>
		<goto name="getMessage">play_getMessage</goto>
	</if>
	<play type="tts" voice="female2" name="NoOneHere">Sorry, you have called outside business hours.  Please call back, or stay on the line to leave a message.</play>
	<play type="tts" voice="female2" name="play_getMessage">Please record your message after the beep, and hang up when finished.</play>
	<record varname="custMessage" name="record_custMessage"/>
</dialplan>
