<dialplan name="Root">
	<if expr="${global.time.hour.military} &lt; 8 || ${global.time.hour.military} &gt; 16 || ${global.date.dayOfWeek} == 7 || ${global.date.dayOfWeek} == 1">
		<!-- Time is in UTC. Days of the week begin with Sunday (1) and end with Saturday (7) -->
		<play type="tts" voice="female2">This is the after hours message. You can leave a message after the beep, and press pound when finished.</play>
		<record varname="message">		</record>
		<hangup name="hangup"/>
	</if>
	<play type="tts" voice="female2">this is the during hours message.</play>
	<record varname="message">	</record>
</dialplan>
